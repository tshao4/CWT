<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.courseworktracker.Settings"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reminder_title"
        android:text="@string/reminder"
        android:textSize="@dimen/text_size_field_title"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder_day"
        android:id="@+id/textview_reminder"
        android:textSize="@dimen/text_size_field_title"
        android:textColor="@android:color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/reminder_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day(s)"
        android:id="@+id/textview_day"
        android:textSize="@dimen/text_size_field_title"
        android:textColor="@android:color/black"
        android:layout_alignTop="@id/textview_reminder"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_reminder"
        android:layout_toLeftOf="@id/textview_day"
        android:layout_alignTop="@id/textview_reminder"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hour of Day"
        android:id="@+id/textview_hour"
        android:textSize="@dimen/text_size_field_title"
        android:textColor="@android:color/black"
        android:layout_below="@id/textview_reminder"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_hour"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textview_day"
        android:textColor="@android:color/black"/>


    <Button
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:text="@string/button_Done"
        android:id="@+id/button_done_setting"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
